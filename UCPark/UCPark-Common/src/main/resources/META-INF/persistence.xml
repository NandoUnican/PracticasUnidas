<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="UCPark" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/UCPark</jta-data-source>
		
		
		<class>domain.Denuncia</class>
		<class>domain.Estacionamiento</class>
		<class>domain.MetodoPago</class>
		<class>domain.Tarjeta</class>
		<class>domain.Usuario</class>
		<class>domain.Vehiculo</class>
				
		<properties>
			<property name="eclipselink.ddk-generation" value="create-or-extend-tables"/>
		</properties>
	
	</persistence-unit>
</persistence>
